
@{
    Layout = null;
}

<!DOCTYPE html>
@model IList<Imovel>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Imóveis</title>
</head>
<body>
    <form asp-action="Listar" method="get" class="mt-5 form-inline">
        <div class="form-group">
            <select class="form-control" name="idBusca"
                    asp-items="@ViewBag.condominios">
                <option value="0">Busque o Condominio</option>
            </select>
        </div>
        <div class="form-group">
            <input type="submit" class="ml-2 btn btn-secondary" value="Buscar" />
        </div>
    </form>
    <table class="mt-5 table">
        <tr>
            <th>
                Número
            </th>
            <th>
                Área Útil
            </th>
            <th>
                Condominio
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Numero</td>
                <td>@item.Numero</td>
                <td>@item.Condominio.Nome</td>
            </tr>
        }
    </table>
</body>
</html>
