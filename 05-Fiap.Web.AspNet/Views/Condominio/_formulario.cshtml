@model Condominio
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="form-group">
    <label asp-for="Nome"></label>
    <input asp-for="Nome" type="text" class="form-control" name="nome" />
</div>
<div class="form-group">
    <label asp-for="Blocos"></label>
    <input asp-for="Blocos" type="text" class="form-control" name="blocos" />
</div>
<div class="form-group">
    <label asp-for="Ativo"></label>
    <input asp-for="Ativo" type="checkbox" class="form-control" name="ativo" />
</div>
<div class="form-group">
    <label asp-for="Tipo"></label>
    <select asp-for="Tipo" class="form-control" name="tipo"
            asp-items="@Html.GetEnumSelectList<Tipo>()">
        <option>Selecione</option>
    </select>
</div>
<fieldset>
    <legend>
        Síndico
    </legend>
    <div class="form-group">
        <label asp-for="Sindico.Nome"></label>
        <input asp-for="Sindico.Nome" type="text" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Sindico.Email"></label>
        <input asp-for="Sindico.Email" type="text" class="form-control"/>
    </div>
</fieldset>
